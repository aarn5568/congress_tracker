# Congress.gov API key (get from https://api.congress.gov/)
CONGRESS_API_KEY=your_congress_api_key_here

# Anthropic API key for Claude Haiku summarization
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Bluesky credentials
BLUESKY_HANDLE=yourhandle.bsky.social
BLUESKY_PASSWORD=your_app_password_here

# Database URL (SQLite default, or PostgreSQL)
# SQLite: sqlite:///congress.db
# PostgreSQL: postgresql://user:password@localhost:5432/congress_tracker
DATABASE_URL=sqlite:///congress.db
